<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="crysoftdynamics.timeline.NearMe"
    android:background="#f2f2f2">
    <TextView
        android:id="@+id/nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/discover_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:textSize="18dp"
        android:text="Who's Near Me?"
        android:textColor="@color/primary_color"
        fontPath="fonts/sourcesansregular.ttf"
        tools:ignore="MissingPrefix"/>
    <TextView
        android:id="@+id/discover_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/discover_btn"
        android:layout_marginBottom="18dp"
        android:text="Discover which of your friends are near you."
        android:textColor="#4d4d4d"
        fontPath="fonts/sourcesansregular.ttf"
        tools:ignore="MissingPrefix"/>
    <Button
        android:id="@+id/discover_btn"
        android:background="@drawable/bg_discover"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Discover"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        fontPath="fonts/sourcesanslight.ttf"
        tools:ignore="MissingPrefix" />
</RelativeLayout>
