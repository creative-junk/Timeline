<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".ActivityMain">

    <ImageView
        android:id="@+id/app_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/backgroud_colored" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="490dp"
        android:id="@+id/logo"
        android:orientation="vertical">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:background="@android:color/white">

        <Button
            android:id="@+id/loginbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/btn_signup_margin_bottom"
            android:layout_marginRight="@dimen/btn_signup_margin_bottom"
            android:layout_marginTop="@dimen/btn_signup_margin_bottom"
            android:background="@drawable/bg_login_btn"
            android:paddingBottom="@dimen/btn_signup_padding_button"
            android:paddingLeft="50dp"
            android:paddingRight="60dp"
            android:paddingTop="@dimen/btn_signup_padding_top"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acc_prompt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/btn_signup_margin_bottom"
            android:layout_marginTop="@dimen/btn_signup_margin_bottom"
            android:background="@drawable/bg_login_btn"
            android:paddingBottom="@dimen/btn_signup_padding_button"
            android:paddingLeft="50dp"
            android:paddingRight="60dp"
            android:paddingTop="@dimen/btn_signup_padding_top"
            android:text="REGISTER"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:onClick="goRegister" />

    </LinearLayout>


</RelativeLayout>
