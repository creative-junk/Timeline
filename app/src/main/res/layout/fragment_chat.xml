<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:padding="10dp"
    tools:context="crysoftdynamics.timeline.Chat">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/emptyExplore"
            fontPath="fonts/sourcesansregular.ttf"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Start a Conversation with Friends"
            android:textColor="#000"
            android:textSize="15dp"
            tools:ignore="MissingPrefix" />

        <ImageView
            android:id="@+id/emptyGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/emptyExplore"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_people" />

        <Button
            android:id="@+id/discover_btn"
            fontPath="fonts/sourcesanslight.ttf"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emptyExplore"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_discover"
            android:text="Start Chat"
            android:textColor="@android:color/white"
            android:textSize="28dp"
            tools:ignore="MissingPrefix" />
    </RelativeLayout>
</RelativeLayout>
